            // "peekViewResult.lineForeground": "#00000000",
        }
    },
    "rust-analyzer.semanticHighlighting.punctuation.specialization.enable": true,
    "editor.semanticHighlighting.enabled": true,
    "editor.semanticTokenColorCustomizations": {
        "[Darcula Solid]": {
            "enabled": true,
            "rules": {
                "macro": "#70ffd9",
